      .state-standby
        =image_tag('waiting.gif', class: 'center-block img-responsive')
        .stage-message
          %h2 sin actividad zzzzz...

      .state-inprogress.hide
        =image_tag('loading.gif', class: 'center-block img-responsive')
        .stage-message
          %h2 push it push it

      .state-success.hide
        =image_tag('congratulation.gif', class: 'center-block img-responsive')
        .stage-message
          %h2 Deploy exitoso!

      .state-error.hide
        =image_tag('not-today.gif', class: 'center-block img-responsive')
        .stage-message
          %h2 ¡eres un programador bamba!


